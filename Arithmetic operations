#include<iostream>
using namespace std;
int main(){
	int a,b;
	cout<<"enter the value of a:\n";
	cin>>a;
	cout<<"enter the value of b:\n";
	cin>>b;
	cout<<"sum is:"<<a+b<<"\n";
	cout<<"difference is:"<<a-b<<"\n";
	cout<<"multiplication is:"<<a*b<<"\n";
	cout<<"divison is:"<<a/b<<"\n";
	cout<<"modulo is:"<<a%b<<"\n";
	return 0;
}
