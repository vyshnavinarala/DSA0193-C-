#include<iostream>
using namespace std;
int main(){
	int arr[100];
	int n;
	int sum=0;
	int i,j;
	float average=0;
	cout<<"enter the no of elements:";
	cin>>n;
	cout<<"enter the array elements:";
	for(int i=0;i<n;i++){
		cin>>arr[i];
	}
	for(i=0;i<n;i++){
		for(j=i+1;j<n;j++){
			if(arr[i]>arr[j]){
				int temp=arr[i];
				arr[i]=arr[j];
				arr[j]=temp;
			}
		}
	}
	cout<<"the numbers in ascending order is:\n";
	for(i=0;i<n;i++){
          cout<<arr[ i ]<<"\n";
	 }
	 cout<<"the second largest number is:"<<arr[n-2];
	 return 0;
}
